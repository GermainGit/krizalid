<p id="notice"><%= notice %></p>


   <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 topbar">
     <div class="mr-md-auto logo"></div>
     <nav class="my-2 my-md-0 mr-md-3">

      <% unless user_signed_in? %>
       <a href="//krizalid.herokuapp.com/users/sign_in"><button type="button" class="btn btn-outline-light">Espace utilisateur</button></a>
       <% end %>
     </nav>
  <% if user_signed_in? %>
  <%= link_to new_article_path do %>
       <%= content_tag :div, "Nouvel article", :class => "btn btn-outline-warning" %>
      <% end %>
    <%= link_to destroy_user_session_path, method: :delete do %>
       <%= content_tag :div, "Déconnexion", :class => "btn btn-outline-danger" %>
      <% end %>

<% end %>
   </div>

   <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 topbar">
     <h5 class="my-0 mr-md-auto font-weight-bold" style="font-size:30px;">Catégories</h5>
     <nav class="my-2 my-md-0 mr-md-3">
     </nav>
   </div>

   <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 topbar">
     <nav class="my-2 my-md-0 mr-md-3">
     <a class="btn btn-outline-primary logement top-btt" href="#">Logement</a>
     <a class="btn btn-outline-primary etudes top-btt" href="#">Etudes</a>
     <a class="btn btn-outline-primary travail top-btt" href="#">Travail</a>
     <a class="btn btn-outline-primary finances top-btt" href="#">Finances</a>
     <a class="btn btn-outline-primary quotidien top-btt" href="#">Quotidien</a>
     <a class="btn btn-outline-primary assurances top-btt" href="#">Assurances</a>
     </nav>
   </div>

   <div class="container">
       <div class="card article">
         <p class="assurances titre">Assurances</p>
         <div class="card-body">
          <div class="image">
          <%= link_to articles_path do %>
       <%= content_tag :i, "", :class => "fas fa-times" %>
     <% end %>
          </div>
           <h5 class="card-title-article"><%= @article.name %></h5>
           <p class="card-text-excerpt"><%= @article.excerpt %></p>
           <p class="card-text-article"><%= @article.text %></p>
         </div>
         <% if user_signed_in?%>
           <div class="edit">
         <%= link_to 'Modifier', edit_article_path(@article), :class => "btn btn-secondary", :style=>'color:#FFFFFF;margin-bottom:15px;' %>
         <%= link_to 'Supprimer', @article, method: :delete, data: { confirm: 'Etes-vous sur ?' }, :class => "btn btn-danger", :style=>'color:#FFFFFF;margin-bottom:15px;' %>
           </div>
           <% end %>
       </div>
    </div>
